<!DOCTYPE html>
<html lang="pt_br">

<%- include('../partials/head') %>

<body class="hold-transition sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">

    <!-- /.navbar -->
  <%- include('../partials/header') %>

  <%- include('../partials/sidebar') %>


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">


        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Editar</h3>
                <div style="margin-left: 91%;">
                  <a href="/empresa/lista"><span class="btn bg-primary">Voltar</span></a>
                </div>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/empresa/atualizar" method="post">
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                    <label for="">Nome da empresa</label>
                    <input type="text" name="nome" class="form-control" value="<%= dados[0].nome %>"  placeholder="nome da empresa" required>
                    <input type="hidden" name="id" class="form-control" value="<%= dados[0].id %>"  required>
                  </div>
                  <div class="col">
                  <div class="form-group">
                    <label for="">Email</label>
                    <input type="email" name="email" class="form-control" value="<%= dados[0].email %>" placeholder="Email" required />
                  </div>
                </div>
                </div>

                <div class="row">
                  <div class="col">
                  <label for="">Telefone</label>
                  <input type="text" name="telefone" class="form-control" value="<%= dados[0].telefone %>"  placeholder="Telefone" required>
                </div>
                <div class="col">
                <div class="form-group">
                  <label for="">Instance</label>
                  <input type="text" name="instance" class="form-control" value="<%= dados[0].instance %>" placeholder="Instance" required>
                </div>
              </div>
              </div>

              <div class="row">
                <div class="col">
                <label for="">API key</label>
                <input type="text" name="apikey" class="form-control" value="<%= dados[0].apikey %>" placeholder="API key" required>
              </div>
              <div class="col">
              <div class="form-group">
                <label for="">Base url</label>
                <input type="text" name="base_url" class="form-control" value="<%= dados[0].base_url %>" placeholder="Base url" required>
              </div>
            </div>
          </div>
            <div class="row">
              <div class="col">
              <label for="">Senha</label>
              <input type="password" name="senha" class="form-control" value="<%= dados[0].senha %>" placeholder="Senha" required>
            </div>
            <div class="col">
            <div class="form-group">
              <label for="">Ativo</label>
              <select class="form-control select2" name="ativo" style="width: 100%;" required>                
                  <option value="Sim" <%= dados[0].nome === 'Sim' ? 'selected' : '' %>>Sim</option>
                  <option value="Não" <%= dados[0].nome === 'Não' ? 'selected' : '' %>>Não</option>  
              </select>
            </div>
          </div>  
        </div>        
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
          </div>               
      </div><!-- /.container-fluid -->
    </section>
  </div>
  <!-- /.content-wrapper -->
  <%- include('../partials/footer') %>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
<%- include('../partials/scripts') %>
</body>
</html>
